@using PetShop.Models

@model PetShop.Models.Animal

@{
    ViewData["Title"] = "AnimalView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="MainInfo">

    <h1>New Animal</h1>


    <div class="AnimalFrom">




        <form method="post" action="/Administration/NewAnimalView" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name">@Html.DisplayNameFor(m => m.Name):</label>
                <br />
                @Html.DisplayFor(m => m.Name)
                <input asp-for="Name" name="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br /><br />

            <div class="form-group">
                <label asp-for="CategoryId">Please select Category</label>
                <select asp-for="CategoryId" asp-items="ViewBag.CategoriesList" class="form-control"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <br /><br />

            <div class="form-group">
                <label asp-for="Description">@Html.DisplayNameFor(m => m.Description):</label>
                <br />
                @Html.DisplayFor(m => m.Description)
                <input asp-for="Description" name="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br /><br />

            <div class="form-group">
                <label asp-for="FileUpload">@Html.DisplayNameFor(m => m.FileUpload):</label>
                <br />
                <input asp-for="FileUpload" name="FileUpload" type="file" class="form-control" />
                <span asp-validation-for="FileUpload" class="text-danger"></span>
            </div>
            <br /><br />

            <button type="submit" class="form-control">Create</button>
        </form>


    </div>


</div>



